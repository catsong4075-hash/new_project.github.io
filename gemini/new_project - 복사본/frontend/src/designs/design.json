    "text": {
      "primary": "#1e293b",
      "secondary": "#475569",
      "tertiary": "#64748b",
      "inverse": "#ffffff"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "'Pretendard', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "secondary": "'Noto Sans KR', sans-serif"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem"
    },
    "fontWeight": {
      "light": "300",
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700",
      "extrabold": "800"
    },
    "lineHeight": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.75"
    }
  },
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem",
    "4xl": "6rem"
  },
  "components": {
    "button": {
      "primary": {
        "background": "var(--color-primary-500)",
        "color": "var(--color-text-inverse)",
        "border": "none",
        "borderRadius": "var(--border-radius-lg)",
        "padding": "var(--spacing-md) var(--spacing-xl)",
        "fontSize": "var(--font-size-lg)",
        "fontWeight": "var(--font-weight-semibold)",
        "transition": "all 0.2s ease-in-out",
        "hover": {
          "background": "var(--color-primary-600)",
          "transform": "translateY(-1px)",
          "boxShadow": "var(--shadow-lg)"
        },
        "active": {
          "background": "var(--color-primary-700)",
          "transform": "translateY(0)"
        },
        "disabled": {
          "background": "var(--color-neutral-300)",
          "color": "var(--color-neutral-500)",
          "cursor": "not-allowed"
        }
      },
      "secondary": {
        "background": "transparent",
        "color": "var(--color-primary-500)",
        "border": "2px solid var(--color-primary-500)",
        "borderRadius": "var(--border-radius-lg)",
        "padding": "var(--spacing-md) var(--spacing-xl)",
        "fontSize": "var(--font-size-lg)",
        "fontWeight": "var(--font-weight-semibold)",
        "transition": "all 0.2s ease-in-out",
        "hover": {
          "background": "var(--color-primary-50)",
          "borderColor": "var(--color-primary-600)"
        }
      }
    },
    "input": {
      "background": "var(--color-background-primary)",
      "border": "2px solid var(--color-neutral-200)",
      "borderRadius": "var(--border-radius-md)",
      "padding": "var(--spacing-md)",
      "fontSize": "var(--font-size-base)",
      "transition": "border-color 0.2s ease-in-out",
      "focus": {
        "borderColor": "var(--color-primary-500)",
        "outline": "none",
        "boxShadow": "0 0 0 3px var(--color-primary-100)"
      },
      "error": {
        "borderColor": "var(--color-error-500)",
        "boxShadow": "0 0 0 3px var(--color-error-100)"
      }
    },
    "card": {
      "background": "var(--color-background-primary)",
      "borderRadius": "var(--border-radius-xl)",
      "padding": "var(--spacing-xl)",
      "boxShadow": "var(--shadow-md)",
      "border": "1px solid var(--color-neutral-100)"
    }
  },
  "effects": {
    "borderRadius": {
      "sm": "0.25rem",
      "md": "0.5rem",
      "lg": "0.75rem",
      "xl": "1rem",
      "2xl": "1.5rem",
      "full": "9999px"
    },
    "shadow": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
    },
    "transition": {
      "fast": "0.15s ease-in-out",
      "normal": "0.2s ease-in-out",
      "slow": "0.3s ease-in-out"
    }
  },
  "layout": {
    "container": {
      "maxWidth": "1200px",
      "padding": "0 var(--spacing-lg)"
    },
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px"
    }
  },
  "imageRatios": {
    "square": {
      "ratio": "1:1",
      "resolution": "800x800",
      "usage": "thumbnails, icons, profile images"
    },
    "portrait": {
      "ratio": "3:4",
      "resolution": "900x1200",
      "usage": "poster-style images, event cards"
    },
    "landscape": {
      "ratio": "16:9",
      "resolution": "1280x720",
      "usage": "main banners, video covers"
    },
    "mobile": {
      "ratio": "9:16",
      "resolution": "720x1280",
      "usage": "mobile-only content, full-screen banners"
    },
    "content": {
      "ratio": "4:3",
      "resolution": "1024x768",
      "usage": "content images, gallery thumbnails"
    }
  }
} 